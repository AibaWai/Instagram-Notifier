<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 標題 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#E4405F"
            android:gravity="center"
            android:padding="16dp" />

        <!-- 說明文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 狀態顯示 -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_disabled"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="#ffffff"
            android:layout_marginBottom="16dp" />

        <!-- Instagram Webhook URL 區塊 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_instagram_webhook"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#E4405F" />

        <EditText
            android:id="@+id/editTextInstagramWebhookUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/webhook_url_hint"
            android:inputType="textUri"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:importantForAutofill="no" />

        <!-- Instagram 測試按鈕 -->
        <Button
            android:id="@+id/buttonTestInstagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_test_instagram"
            android:textSize="14sp"
            android:textColor="#E4405F"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- X (Twitter) Webhook URL 區塊 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_twitter_webhook"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#1DA1F2" />

        <EditText
            android:id="@+id/editTextTwitterWebhookUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/webhook_url_hint"
            android:inputType="textUri"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:importantForAutofill="no" />

        <!-- X (Twitter) 測試按鈕 -->
        <Button
            android:id="@+id/buttonTestTwitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_test_twitter"
            android:textSize="14sp"
            android:textColor="#1DA1F2"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- 啟用通知監聽按鈕 -->
        <Button
            android:id="@+id/buttonEnable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_enable_notifications"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#E4405F"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <!-- 設定按鈕 -->
        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_settings"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#ffffff"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <!-- 使用說明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/usage_instructions"
            android:textSize="14sp"
            android:textColor="#666666"
            android:padding="16dp"
            android:background="#ffffff"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>