<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 基本設置區塊 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本設置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="配置名稱"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextConfigName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="為這個配置起個名字"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="12dp"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="平台"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerPlatform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discord Webhook URL"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextWebhookUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://discord.com/api/webhooks/..."
            android:inputType="textUri"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="24dp"
            android:importantForAutofill="no" />

        <!-- 過濾設置區塊 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="過濾設置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="過濾模式"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerFilterMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="關鍵字（用逗號分隔）"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextKeywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如：直播,發布,貼文"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="8dp"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="設置關鍵字後，只有包含相應詞語的通知才會被轉發"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginBottom="24dp" />

        <!-- Bot 自定義設置區塊 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bot 自定義設置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bot 名稱"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextBotName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discord 中顯示的 Bot 名稱"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="12dp"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bot 頭像 URL"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextIconUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bot 頭像圖片的 URL"
            android:inputType="textUri"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="12dp"
            android:importantForAutofill="no" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Embed 顏色（16進制）"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如：E4405F"
            android:padding="12dp"
            android:background="#ffffff"
            android:layout_marginBottom="24dp"
            android:importantForAutofill="no" />

        <!-- 顯示選項區塊 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="顯示選項"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchIncludeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="顯示通知標題"
                android:textSize="14sp"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchIncludeTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="顯示時間戳"
                android:textSize="14sp"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="啟用此配置"
                android:textSize="14sp"
                android:textColor="#333333" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>